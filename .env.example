# Application Settings
APP_NAME=Universal Health Monitor
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=False

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_PREFIX=/api/v1

# Database Settings
DATABASE_URL=postgresql+asyncpg://chm_user:your_password@localhost:5432/chm_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=False

# Security Settings
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_EXPIRE_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Encryption Settings
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
SNMP_ENCRYPTION_KEY=your-snmp-encryption-key-here

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Redis Settings (Optional - for caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_POOL_SIZE=10
# REDIS_TTL=300

# SNMP Settings
SNMP_DEFAULT_COMMUNITY=public
SNMP_DEFAULT_VERSION=2c
SNMP_TIMEOUT=5
SNMP_RETRIES=3

# Discovery Settings
DISCOVERY_PARALLEL_SCANS=10
DISCOVERY_DEFAULT_PORTS=22,23,80,443,161

# Background Tasks Settings
BACKGROUND_WORKERS=10
BACKGROUND_TASK_INTERVAL=60
METRICS_COLLECTION_INTERVAL=300

# Rate Limiting Settings
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=60

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=/var/log/chm/app.log

# Email Settings (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com
# SMTP_USE_TLS=True

# Slack Settings (Optional - for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#monitoring

# Monitoring Settings
ENABLE_METRICS=True
METRICS_PORT=9090