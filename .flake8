[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .venv,
    venv,
    .env,
    migrations

# Error codes to ignore
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (handled by black)

per-file-ignores = 
    __init__.py:F401
    tests/*:S101,S106
    scripts/*:S603,S607

# Additional settings for better code quality
inline-quotes = double
import-order-style = pep8
application-import-names = chm,api,backend,core,models,services